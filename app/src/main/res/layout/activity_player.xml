<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="12dp">

    <!-- 标题 - 固定高度 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/img_wakamole_text"
        android:scaleType="centerInside"
        android:layout_marginBottom="5dp" />

    <!-- 分数显示 - 紧贴标题 -->
    <TextView
        android:id="@+id/tv_playerscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/purple_500"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="Score: 0"
        android:layout_marginBottom="15dp" />

    <!-- 姓名输入 -->
    <EditText
        android:id="@+id/et_playername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:hint="Enter name"
        android:layout_marginBottom="15dp" />

    <!-- 头像颜色选择 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="Avatar Colour"
        android:layout_marginBottom="8dp" />

    <!-- 单选按钮组 - 紧凑排列 -->
    <RadioGroup
        android:id="@+id/rg_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/rb_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Grey"
            android:checked="true"
            android:padding="4dp" />

        <RadioButton
            android:id="@+id/rb_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Blue"
            android:padding="4dp" />

        <RadioButton
            android:id="@+id/rb_orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Orange"
            android:padding="4dp" />

        <RadioButton
            android:id="@+id/rb_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Green"
            android:padding="4dp" />

        <RadioButton
            android:id="@+id/rb_purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Purple"
            android:padding="4dp" />

        <RadioButton
            android:id="@+id/rb_pink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Pink"
            android:padding="4dp" />

    </RadioGroup>

    <!-- 提交按钮 - 放在RadioGroup下面，确保可见 -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:onClick="onClickSubmit"
        android:layout_marginTop="10dp" />

</LinearLayout>